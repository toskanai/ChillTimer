<Window x:Class="ChillTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="ChillTimer"
        Width="480" Height="400"
        MinWidth="460" MinHeight="400"
        MaxWidth="480" MaxHeight="400"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="Assets/Meow.ico">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="10"
                        ResizeBorderThickness="8"
                        CornerRadius="18"
                        GlassFrameThickness="0"
                        UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Border CornerRadius="18"
          SnapsToDevicePixels="True"
          ClipToBounds="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="{StaticResource BgTop}" Offset="0"/>
                <GradientStop Color="{StaticResource BgBottom}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="26" ShadowDepth="0" Opacity="0.18"/>
        </Border.Effect>

        <Grid Margin="8">

            <Border CornerRadius="20"
              Background="{StaticResource BrushCard}"
              Padding="24" Margin="14,46,14,14"
              Panel.ZIndex="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="22" ShadowDepth="0" Opacity="0.28" Color="#99000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="TimerText"
                       Text="25:00"
                       FontSize="60"
                       FontWeight="Bold"
                       FontFamily="Consolas"
                       Foreground="{StaticResource BrushText}"
                       TextAlignment="Center"/>
                        <TextBlock x:Name="StatusText"
                       Text="Bereit (25:00)"
                       Margin="0,6,0,0"
                       FontSize="14"
                       Foreground="{StaticResource BrushTextDim}"
                       TextAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1"
                      Orientation="Horizontal"
                      HorizontalAlignment="Center"
                      Margin="0,24,0,0">
                        <Button x:Name="PlayBtn"
                    Style="{StaticResource ImageButton}"
                    Click="PlayBtn_Click"
                    Margin="0,0,16,0">
                            <Image Source="Assets/Play.png" Stretch="Uniform"/>
                        </Button>
                        <Button x:Name="PauseBtn"
                    Style="{StaticResource ImageButton}"
                    Click="PauseBtn_Click"
                    Margin="0,0,16,0">
                            <Image Source="Assets/Pause.png" Stretch="Uniform"/>
                        </Button>
                        <Button x:Name="ResetBtn"
                    Style="{StaticResource ImageButton}"
                    Click="ResetBtn_Click">
                            <Image Source="Assets/Reset.png" Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Image Source="pack://application:,,,/Assets/lights.png"
             Stretch="UniformToFill"
             VerticalAlignment="Top"
             Height="110"
             Margin="4,13,-4,0"
             Opacity="0.88"
             IsHitTestVisible="False"
             Panel.ZIndex="5"/>

            <Image Source="pack://application:,,,/Assets/efeu.png"
             Stretch="Uniform"
             VerticalAlignment="Top"
             Height="152"
             Margin="-181,16,178,0"
             Opacity="0.85"
             IsHitTestVisible="False"
             Panel.ZIndex="6"/>

            <Image Source="pack://application:,,,/Assets/plant.png"
             Stretch="Uniform"
             VerticalAlignment="Bottom"
             HorizontalAlignment="Left"
             Height="140"
             Margin="-23,0,0,-13"
             Opacity="0.9"
             IsHitTestVisible="False"
             Panel.ZIndex="7"/>

            <Image Source="pack://application:,,,/Assets/girl.png"
             Stretch="Uniform"
             VerticalAlignment="Bottom"
             HorizontalAlignment="Right"
             Height="135"
             Margin="0,0,17,18"
             Opacity="0.9"
             IsHitTestVisible="False"
             Panel.ZIndex="7"/>

            <Grid x:Name="TitleDragArea"
            Height="36"
            VerticalAlignment="Top"
            Background="{x:Null}"
            shell:WindowChrome.IsHitTestVisibleInChrome="True"
            Panel.ZIndex="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,6,0">
                    <Button Style="{StaticResource ImageButtonSmall}"
                  Background="Transparent"
                  Click="Minimize_Click"
                  shell:WindowChrome.IsHitTestVisibleInChrome="False"
                  Margin="0,0,6,0">
                        <Image Source="Assets/Minimize.png" Stretch="Uniform"/>
                    </Button>
                    <Button Style="{StaticResource ImageButtonSmall}"
                  Background="Transparent"
                  Click="Close_Click"
                  shell:WindowChrome.IsHitTestVisibleInChrome="False">
                        <Image Source="Assets/Close.png" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</Window>
